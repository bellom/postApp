<!--..partials means one level back just like using cd ..-->
<% include ../partials/header%>
  <div class="container">
      <div class="row">

            <h1 style="text-align:center">Create A New Yelp Camp</h1>
            <div style="width:30%; margin:  auto;">
                  <a href="/main">Go Back To Yelp Camp List</a>
                  <form action="/main" method="POST">

                        <div class="form-group">
                              <input class="form-control" type="text" placeholder="add new camp name" name="name">
                        </div>
                        
                        <div class="form-group">
                              <input class="form-control" type="number" placeholder="add price" name="price" min="0.01" step="0.01">
                        </div>

                        <div class="form-group">
                              <input class="form-control" type="text" placeholder="add image" name="image">
                        </div>

                        <div class="form-group">
                              <input class="form-control" type="text" placeholder="description" name="description">
                        </div>

                        <div class="form-group">
                              <button class="btn btn-lg btn-primary btn-block">Add+</button>
                        </div>

                  </form>
            </div>
      </div>
  </div>
<% include ../partials/footer%>
