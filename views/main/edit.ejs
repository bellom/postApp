<!--..partials means one level back just like using cd ..-->
<% include ../partials/header%>
  <div class="container">
      <div class="row">

            <h1 style="text-align:center">Edit <%= camp.name %></h1>
            <div style="width:30%; margin:  auto;">
               <a href="/main">Go Back To Yelp Camp List</a>
               <form action="/main/<%= camp._id %>?_method=PUT" method="POST">

                  <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value= "<%= camp.name %>" >
                  </div>

                  <div class="form-group">
                    <input class="form-control" type="number" name="camp[price]" value="<%= camp.price%>"  min="0.01" step="0.01">
                  </div>

                  <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" value= "<%= camp.image %>" >
                  </div>

                  <div class="form-group">
                    <input class="form-control" type="text" name="camp[description]" value=" <%= camp.description %> ">
                  </div>

                  <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                  </div>

                </form>
            </div>
      </div>
  </div>
<% include ../partials/footer%>
