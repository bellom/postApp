<% include ../partials/header %>

<div class="container">
   <header class="jumbotron">
      <div class="container">
         <h1>WELCOME TO YelpCamp!!</h1>
         <p>View our hand-picked yelp camp from all over the world!!</p>
         <p><a class="btn btn-primary btn-lg" href="/main/new">Add New Yelp Camp</a></p>
      </div>
   </header>

   <!--to make the images equal, we add style display-->
   <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <% camps.forEach(function(camp){ %>

         <div class="col-md-3 col-sm-6">

            <div class="thumbnail">
               <img src="<%= camp.image %>">
               <div class="caption">
                  <h4><%= camp.name %></h4>
               </div>
               <p>
                  <a href="/main/<%= camp._id %>" class="btn btn-primary">More Info</a>
               </p>
            </div>

         </div>
      <% }); %>
   </div>
</div>

<% include ../partials/footer %>