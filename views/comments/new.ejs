<% include ../partials/header%>
  <div class="container">
      <div class="row">

            <h1 style="text-align:center">Add New Comment To <%=camp.name%></h1>
            <div style="width:30%; margin:  auto;">
                  <a href="/">Go Back To Yelp Camp List</a>
                  <form action="/main/main/<%= camp._id%>/comments" method="POST">
      
                        <div class="form-group">
                              <input class="form-control" type="text" placeholder="text" name="comment[text]">
                        </div>
      
      
                        <div class="form-group">
                              <button class="btn btn-lg btn-primary btn-block">Add+</button>
                        </div>
      
                  </form>
            </div>
      </div>
  </div>
<% include ../partials/footer%>
