<!--..partials means one level back just like using cd ..-->
<% include ../partials/header%>


  <div class="container">
      <div class="row">

        <h1 style="text-align:center">Edit Comment </h1>
        <div style="width:30%; margin:  auto;">
          <a href="/">Go Back To Yelp Camp List</a>
          <form action="/main/main/<%= camp_id%>/comments/<%= comment._id%>?_method=PUT" method="POST">

            <div class="form-group">
                  <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>

            <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>

          </form>
        </div>
      </div>
  </div>


<% include ../partials/footer%>
